<p id="notice"><%= notice %></p>

<div class="labelm"><h1>Tareas</h1></div><br>
<div class="container">          
  <table class="table">
  <thead>
    <tr>
      <th><div class="label">Nombre</div></th>
      <th><div class="label">Descripcion</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task_path(id: task.id, project_id: @project.id) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="label1"><%= link_to 'Nueva Tarea', new_task_path(project_id: @project.id) %></div>
