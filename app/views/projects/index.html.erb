<p id="notice"><%= notice %></p>

<div class="labelm"><h1>Proyectos</h1></div><br>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th><div class="label">Nombre</div></th>
      <th><div class="label">Descripcion</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><div class="labelb"><%= project.name %></div></td>
        <td><div class="labelb"><%= project.descripcion %></div></td>
        <td><div class="labelb"><%= link_to 'Ver', project %></div></td>
        <td><div class="labelb"><%= link_to 'Editar', edit_project_path(project) %></div></td>
        <td><div class="labelb"><%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="label1"><%= link_to 'Nuevo Proyecto', new_project_path %></div>
